@model IList<Lab08.MVC.Business.Models.AdvertisementHeaderView>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table  class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Header</th>
            <th scope="col" class="col-md-1">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Header, "AdvertisementDetails", "Home", new { advertisementId = item.Id }, null)</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Pagination", ViewData)

